{
  "private": false,
  "name": "@pointcloud/pui-components",
  "version": "0.0.2",
  "description": "pointcloud react 组件库",
  "author": "Frank",
  "license": "MIT",
  "keywords": [
    "pointcloud",
    "react",
    "components",
    "ui"
  ],
  "homepage": "",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "prepublishOnly": "npm run build",
    "docker:build": "docker build -t pui-components .",
    "docker:tag": "docker tag pui-components tianhu.pcgi.com.cn:9888/base-project/pui-components",
    "docker:push": "npm run deploy && npm run docker:build && npm run docker:tag && docker push tianhu.pcgi.com.cn:9888/base-project/pui-components"
  },
  "files": [
    "dist"
  ],
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.22.7",
    "babel-plugin-import": "^1.13.5",
    "framer-motion": "6.2.8",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^13.0.0",
    "@types/jest": "^27.0.3",
    "@umijs/fabric": "^2.8.1",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.1.47",
    "father": "^4.0.0-rc.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "path": "^0.12.7",
    "prettier": "^2.2.1",
    "yorkie": "^2.0.0"
  }
}
